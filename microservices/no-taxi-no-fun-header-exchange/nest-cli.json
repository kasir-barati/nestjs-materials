{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/driver-api/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/driver-api/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/driver-api",
  "projects": {
    "driver-api": {
      "type": "application",
      "root": "apps/driver-api",
      "entryFile": "main",
      "sourceRoot": "apps/driver-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/driver-api/tsconfig.app.json"
      }
    },
    "verification-api": {
      "type": "application",
      "root": "apps/verification-api",
      "entryFile": "main",
      "sourceRoot": "apps/verification-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/verification-api/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "testing": {
      "type": "library",
      "root": "libs/testing",
      "entryFile": "index",
      "sourceRoot": "libs/testing/src",
      "compilerOptions": {
        "tsConfigPath": "libs/testing/tsconfig.lib.json"
      }
    },
    "audit-log-api": {
      "type": "application",
      "root": "apps/audit-log-api",
      "entryFile": "main",
      "sourceRoot": "apps/audit-log-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/audit-log-api/tsconfig.app.json"
      }
    }
  }
}
